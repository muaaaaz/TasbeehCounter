<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7dp"
    android:background="@drawable/style_rounded_border"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_20dp"
    android:paddingVertical="@dimen/_7dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3dp"
        android:layout_weight="0.8"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_tasbeeh_item_title"
            style="@style/TasbeehItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Title"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/text_tasbeeh_item_count"
            style="@style/TasbeehItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="0"
            android:textSize="@dimen/_15sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_edit_tasbeeh_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_3dp"
        android:layout_weight="0.1"
        android:background="@drawable/btn_oval"
        android:gravity="center"
        android:src="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/btn_delete_tasbeeh_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@drawable/btn_oval"
        android:gravity="center"
        android:src="@drawable/ic_delete" />
</LinearLayout>